<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

  <TextView
      android:id="@+id/text_view_fragment_countries__country_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="0dp"
      android:text="TextView"
      android:textSize="18sp"
      app:layout_constraintLeft_toRightOf="@+id/image_view_fragment_countries__country_flag"
      app:layout_constraintTop_toTopOf="@+id/image_view_fragment_countries__country_flag"/>

  <TextView
      android:id="@+id/text_view_fragment_countries__country_area"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="0dp"
      android:layout_marginTop="16dp"
      android:text="TextView"
      app:layout_constraintLeft_toLeftOf="@+id/text_view_fragment_countries__country_name"
      app:layout_constraintTop_toBottomOf="@+id/text_view_fragment_countries__country_name"/>

  <ImageView
      android:id="@+id/image_view_fragment_countries__country_flag"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:adjustViewBounds="true"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/ic_launcher"
      app:layout_constraintRight_toLeftOf="@+id/guideline"
      android:layout_marginRight="8dp"
      />

  <android.support.constraint.Guideline
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/guideline"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.2"/>
</android.support.constraint.ConstraintLayout>